<section style="display:flex;flex-direction:column;align-items:center;padding-top:25px;padding-bottom:25px;">
  <div style="width:700px;display:flex:flex-direction:row;align-items:center;justify-content:center;padding:10px;background-color:#fff;border: 1px solid rgb(213, 213, 213);box-shadow: 0 0.5px 3px 1px rgb(228, 228, 228);border-radius:10px">
    <h3 style="font-size:2.5rem">Request Summary</h3>
    <div style="display:flex;flex-direction:column; justify-content:space-evenly">
        <% @items.each do |item_name, person_count| %>
            <p style="padding:0;margin:0;font-size:1.2rem"><%= item_name %></p>
            <p style="padding:0;margin:0;font-size:1.2rem">Number of individuals: <%= person_count %></p>
            <hr>
        <% end %>
    <div>

    <div style="display:flex;min-height:50px">
      <p style="padding:0;padding-right:10px;margin:0;font-size:1.2rem">Your comments:</p>
      <p style="padding:0;margin:0;font-size:1.2rem"><%= @request['comments'] %></p>
    </div>

    <h3 style="font-size:1.6rem">Please confirm that the above list is what you meant to request</h3>
    <div style="display:flex;justify-content:space-between;align-items:center">
      <%= link_to 'No, I need to change something.', 'javascript:history.back()', rel: 'nofollow', style: "font-size: 1.6rem;" %>
      <%= link_to "Yes, it's right", partners_individuals_requests_path(partners_family_request: @request, organization_id: current_partner.organization.id), method: :post, rel: 'nofollow', style: "font-size: 1.6rem;" %>
    </div>
  </div>
</section>


