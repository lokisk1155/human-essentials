<section class="d-flex flex-column align-items-center py-4">
  <div class="card shadow mx-auto" style="width: 40rem;">
    <div class="card-body">
      <h1 class="text-center">Request Summary</h1>
      <hr>
      <% @items.each do |item_name, child_info| %>
        <p class="card-text">
          <strong><%= item_name %></strong> for <%= child_info[:first_name] %> <%= child_info[:last_name] %>
        </p>
        <hr>
      <% end %>
      <h3 class="card-subtitle mb-4 text-center">Please confirm that the above list is what you meant to request</h3>
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to 'Go back', 'javascript:history.back()', rel: 'nofollow', class: "btn btn-danger" %>
        <%= button_to 'Submit', partners_family_requests_path, method: :post, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</section>


